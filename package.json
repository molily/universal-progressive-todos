{
  "name": "universal-progressive-todos",
  "version": "0.1.0",
  "private": true,
  "description": "A todo list app with progressive enhancement",
  "author": "Mathias Sch√§fer <molily@mailbox.org>",
  "license": "MIT",
  "scripts": {
    "start": "npm run start:development",
    "start:development": "cross-env-shell NODE_ENV=development \"npm run prepare-dist && npm run build:css:development && npm run server:development\"",
    "server:development": "nodemon --exec babel-node --watch src --ext js --delay 2 src/server.js",
    "server:production": "cross-env NODE_ENV=production node dist/server/server.js",
    "build": "cross-env-shell NODE_ENV=production \"npm run prepare-dist && npm run build:client:production && npm run build:server:production\"",
    "build:client:development": "npm run build:css:development && npm run build:webpack:development",
    "build:client:production": "npm run build:css:production && npm run build:webpack:production",
    "build:server:production": "babel src --out-dir dist/server/",
    "build:webpack:development": "cross-env NODE_ENV=development webpack",
    "build:webpack:production": "cross-env NODE_ENV=production webpack",
    "build:css": "node-sass src/stylesheets/main.scss dist/client/static/main.css",
    "build:css:development": "npm run build:css -- --output-style expanded",
    "build:css:production": "npm run build:css -- --output-style compressed",
    "prepare-dist": "rimraf dist && mkdirp dist/client/static/ && mkdirp dist/server/",
    "lint": "eslint src"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "classnames": "^2.2.6",
    "compression": "^1.7.4",
    "ejs": "^3.0.1",
    "encoding-down": "^6.3.0",
    "express": "^4.17.1",
    "leveldown": "^5.4.1",
    "levelup": "^4.3.2",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-redux": "^7.1.3",
    "react-router-dom": "^5.1.2",
    "redux": "^4.0.5",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/node": "^7.7.7",
    "@babel/plugin-transform-react-constant-elements": "^7.7.4",
    "@babel/plugin-transform-runtime": "^7.7.6",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-react": "^7.7.4",
    "@babel/register": "^7.7.7",
    "@babel/runtime": "^7.7.7",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "cross-env": "^6.0.3",
    "css-loader": "^3.4.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.17.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.13.0",
    "nodemon": "^2.0.2",
    "rimraf": "^3.0.0",
    "webpack": "4.41.4",
    "webpack-cli": "^3.3.10",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-hot-middleware": "^2.25.0"
  }
}
