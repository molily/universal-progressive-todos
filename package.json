{
  "name": "universal-progressive-todos",
  "version": "0.1.0",
  "private": true,
  "description": "A todo list app with progressive enhancement",
  "author": "Mathias Schäfer <zapperlott@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "cross-env-shell NODE_ENV=development \"npm run prepare-dist && npm run build:css && npm run server:development\"",
    "start:production": "cross-env-shell NODE_ENV=production \"npm run build:production && npm run server:production\"",
    "server:development": "nodemon --exec babel-node --watch src --ext js --delay 2 src/server.js",
    "// Don’t use babel-node in performance-critical production! Precompile and bundle the server files, for example with Rollup.": "",
    "server:production": "babel-node src/server.js",
    "clean": "rimraf dist",
    "prepare-dist": "npm run clean && mkdirp dist/static/",
    "build": "npm run build:production",
    "build:production": "npm run prepare-dist && npm run build:css && npm run build:webpack:production",
    "build:development": "npm run prepare-dist && npm run build:css && npm run build:webpack:development",
    "build:webpack:production": "cross-env NODE_ENV=production webpack",
    "build:webpack:development": "cross-env NODE_ENV=development webpack",
    "build:css": "node-sass --output-style expanded src/stylesheets/main.scss dist/static/main.css",
    "lint": "eslint src"
  },
  "dependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/plugin-transform-react-constant-elements": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.4.5",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.6",
    "babel-register": "^6.26.0",
    "body-parser": "^1.19.0",
    "classnames": "^2.2.6",
    "compression": "^1.7.4",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "ejs": "^2.6.1",
    "encoding-down": "^6.0.2",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.0",
    "express": "^4.17.1",
    "leveldown": "^5.1.0",
    "levelup": "^4.0.1",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^7.0.3",
    "react-router-dom": "^5.0.0",
    "react-transform-hmr": "^1.0.4",
    "redux": "^4.0.1",
    "rimraf": "^2.6.3",
    "style-loader": "^0.23.1",
    "uuid": "^3.3.2",
    "webpack": "4.32.2",
    "webpack-dev-middleware": "^3.7.0",
    "webpack-hot-middleware": "^2.25.0"
  }
}
